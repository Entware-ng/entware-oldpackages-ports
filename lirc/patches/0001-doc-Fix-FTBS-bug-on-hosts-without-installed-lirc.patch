-	PYTHONPATH=.:$(top_srcdir)/tools \
+	PYTHONPATH=$(top_srcdir)/tools/lirc-setup:$(top_srcdir)/tools \
 	$(PYTHON) $(srcdir)/data2hwdb $(top_srcdir)/configs ../configs \
 	    > lirc.hwdb
 
